<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <div>
    <% if (!user) {%>  
      <a class="btn" href="/login"><button type="submit" class="btn btn-outline-dark" style="margin: 1em">Login</button></a>
      <a class="btn" href="/registration"><button type="submit" class="btn btn-outline-dark" style="margin: 1em">Register</button></a>
        <% } else { %>
        <form class="form-inline my-1" action="/logout" method="POST">
        <div>
          <label>Logged In As: <%= user.email %><button type="submit" class="btn btn-outline-primary ml-3">Logout</button></label>
          </div>
        </form>
        <% } %>
    </div>
  </nav>
</header>